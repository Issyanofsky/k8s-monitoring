apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: prometheus-sa-cluster-binding
subjects:
  - kind: ServiceAccount
    name: prometheus-sa
    namespace: monitoring  # The namespace where your service account is
roleRef:
  kind: ClusterRole
  name: prometheus-role  # The custom role we just defined
  apiGroup: rbac.authorization.k8s.io
